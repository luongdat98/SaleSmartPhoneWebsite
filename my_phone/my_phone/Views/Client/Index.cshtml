<section id="bestsellers" class="color-bg wow fadeInUp">
    <div class="container">
        <h1 class="section-title">Best Sellers</h1>

        <div class="product-grid-holder medium">
            <div class="col-xs-12 col-md-12 no-margin">
                
                <div class="row no-margin">
                    @foreach (var product in Model)
                    {
                        <div class="col-xs-12 col-sm-4 no-margin product-item-holder size-medium hover" style="max-width: 290px;">

                            <div class="product-item">
                                <div class="image">
                                    <img src="~/Images/admin/@product.image_url" />
                                </div>
                                <div class="body">
                                    <div class="label-discount clear"></div>
                                    <div class="title">
                                        @*@Html.ActionLink("Product", "SingleProduct", new { id = product.id })
                                            <span> @product.name</span> *@ 
                                        <a href="@Url.Action("SingleProduct","Client", new { id = product.id })">@product.name</a>
                                    </div>
                                    <div class="brand">@product.brand.name</div>
                                </div>
                                <div class="prices">

                                    <div class="price-current text-right">@product.price đ</div>
                                </div>
                                <div class="hover-area">
                                    <div class="add-cart-button">
                                        <a href="/addcart?productId=@product.id&quantity=1" class="le-button">Add to cart</a>
                                        @*<input type="button" name="AddToCart" value="Add To Cart" class="le-button" itemid="@product.id" id="btnAddToCart" onclick="AddToCart(this)"/>*@
                                    </div>
                                    <div class="wish-compare">
                                        <a class="btn-add-to-wishlist" href="#">Add to Wishlist</a>
                                        <a class="btn-add-to-compare" href="#">Compare</a>
                                    </div>
                                </div>

                            </div>
                            
                        </div><!-- /.product-item-holder -->
                    }

                    </div><!-- /.row -->
            </div><!-- /.col -->
            

        </div><!-- /.product-grid-holder -->
    </div><!-- /.container -->
</section><!-- /#bestsellers -->
<!-- ========================================= BEST SELLERS : END ========================================= -->
